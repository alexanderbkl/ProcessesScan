<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ComandaDadesActivity">

<TextView
            android:id="@+id/tvComandaDades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Dades comanda"
            android:textColor="#000000"
            android:textSize="30sp" />
    <TextView
            android:id="@+id/tvDireccioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:layout_below="@id/tvComandaDades"
            android:text="Direcció"
            android:textColor="#000000"
            android:textSize="30sp" />

    <EditText
            android:id="@+id/etDireccio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDireccioTitle"
            android:inputType="textMultiLine"
            android:lines="5"
            android:editable="false"
            android:maxLines="20"
            android:hint="Direcció" />
    <TextView
            android:id="@+id/tvTelOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:layout_below="@id/itDireccio"
            android:text="Tel. 1"
            android:textColor="#000000"
            android:textSize="30sp" />

    <EditText
            android:id="@+id/etTelOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTelOne"
            android:inputType="textMultiLine"
            android:lines="1"
            android:editable="false"
            android:maxLines="1"
            android:hint="" />
    <TextView
            android:id="@+id/tvTelTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:layout_below="@id/etTelOne"
            android:text="Tel. 2"
            android:textColor="#000000"
            android:textSize="30sp" />

    <EditText
            android:id="@+id/etTelTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTelTwo"
            android:inputType="textMultiLine"
            android:lines="1"
            android:editable="false"
            android:maxLines="1"
            android:hint="" />
    <TextView
            android:id="@+id/tvObservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:layout_below="@id/etTelTwo"
            android:text="Observacions"
            android:textColor="#000000"
            android:textSize="30sp" />

    <EditText
            android:id="@+id/etObservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvObservations"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="20"
            android:editable="false"
            android:hint="Observacions" />

    <Button
            android:id="@+id/btAcceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etObservations"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary"
            android:text="CONFIRMACIÓ"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

</RelativeLayout>