<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#69DDC8" />
            <gradient android:angle="-90" android:startColor="#6FB4CF" android:endColor="#64E3CE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#95DCCE" />
            <solid android:color="#65DDCB"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#71DCC8" />
            <gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="#63DAC7" />
        </shape>
    </item>
</selector>